<launch>
   <arg name="bag" default="$(env HOME)/drone.bag"/>
   <node pkg="rosbag" type="play" name="player" output="screen" args="-l --clock $(arg bag)"/>
   <node pkg="image_transport" type="republish" name="publisher" args="in:=/image x264 out:=/republished/image" />
   <node pkg="image_view" type="image_view" name="viewer" args="image:=/republished/image"/>
</launch>
